<form onsubmit="return sendMessage(this);">
	<input id="complaint" placeholder="Enter Your Query">
	<input type="submit" value="Send">
</form>
<div class="danger">
    <ul id="Complaint"></ul>
</div>

<script>
	var server = `http://localhost:${window.location.port}`;

	var io = io(server);

	function sendMessage() {
		var message = document.getElementById("complaint");

		io.emit("new_complaint", message.value);
		return false;
	}

	$.ajax({
		url: server + "/get_complaint",
		method: "GET",
		success: function (response) {
			console.log(response);
			var Complaint = document.getElementById("Complaint");
			var data = JSON.parse(response);
			for (var a = 0; a < data.length; a++) {
                var li = document.createElement("li");
                li.style.listStyleType = "none";
				li.innerHTML = data[a].complaint;
				li.innerHTML += "<button data-id='" + data[a].id + "' onclick='deleteComplaint(this);'>Delete</button>";

				Complaint.appendChild(li);
			}
		}
	})

	function deleteComplaint(self) {
		var id = self.getAttribute("data-id");
		io.emit("delete_complaint", id);
	}
	io.on("delete_complaint", function (id) {
		//document.getElementById("message-" + id).innerHTML = "<i>Message has been deleted</i>";
		var node=Document.getElementById("complaint-"+id);
		node.innerHTML="This message has been deleted";
	});
	io.on("new_complaint", function (data) {
		console.log("Server says", data);

		var li = document.createElement("li");
		li.id = "complaint-" + data.id;
		li.innerHTML = data.complaint;
		li.innerHTML += "<button data-id='" + data.id + "' onclick='deleteComplaint(this);'>Delete</button>";
		var Complaint = document.getElementById("complaint");
		Complaint.appendChild(li);
	})
</script>
